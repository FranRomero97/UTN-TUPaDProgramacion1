   numero = int(input("Ingrese un numero par: "))
   if numero % 2 == 0:
    print("Ha ingresado un numero par")
    break
else:
   print("Por favor, Ingrese un numero par")

#ACTIVIDAD 4

cantidad: int = int(input("Ingrese los numeros que desea sumar si desea salir ingrese 0"))
suma = 0

while cantidad != 0:
        suma += cantidad
        cantidad: int = int(input("Ingrese los numeros que desea sumar si desea salir ingrese 0"))
print(f"El resultado final es {suma}:")

#ACTIVIDAD 5

num : int=int(input("Ingrese un numero entre 0 y 9"))
cont : int = 0
import random
num_aleatorio = random.randint(0,9)
while num != num_aleatorio:
  if num == num_aleatorio:
   cont += 1
  elif num != num_aleatorio:
   cont += 1
   print("intentelo de nuevo")
   num: int=int(input("Ingrese un numero entre 0 y 9"))
print("ganaste el numero aleatorio era",num_aleatorio,"con: ",cont,"intentos")

#ACTIVIDAD 6

from statistics import mode, median, mean
import random

numeros_aleatorios = [random.randint(1, 100) for i in range(50)]

media = mean(numeros_aleatorios)
mediana = median(numeros_aleatorios)
moda = mode(numeros_aleatorios)

categorias = {
    "mean": [],
    "median": [],
    "mode": []
}

for n in numeros_aleatorios:
    dist_media = abs(n - media)
    dist_mediana = abs(n - mediana)
    dist_moda = abs(n - moda)
    
    min_dist = min(dist_media, dist_mediana, dist_moda)
    
    if min_dist == dist_media:
        categorias["mean"].append(n)
    elif min_dist == dist_mediana:
        categorias["median"].append(n)
    else:
        categorias["mode"].append(n)

print("Lista de números aleatorios:")
print(numeros_aleatorios)

print("\nMedidas estadísticas:")
print(f"Media: {media}")
print(f"Mediana: {mediana}")
print(f"Moda: {moda}")

print("\nClasificación de números por categoría:")
for clave, valores in categorias.items():
    print(f"{clave} : {valores}")

#ACTIVIDAD 7

frase = ""
while frase == "":
    frase = input("Ingrese una frase o palabra: ")

ultima_letra = ""
for i in range(len(frase)-1, -1, -1):
    if frase[i] != " ":
        ultima_letra = frase[i]
        break  

if ultima_letra.lower() in "aeiou":
    frase += "!" 

print("Resultado:", frase)

#ACTIVIDAD 8 

nombre = input("Ingrese su nombre: ")

opcion = 0
while opcion not in [1, 2, 3]:
    opcion = int(input("Seleccione una opción:\n1. Mayúsculas\n2. Minúsculas\n3. Primera letra mayúscula\nIngrese 1, 2 o 3: "))

if opcion == 1:
    nombre = nombre.upper()
elif opcion == 2:
    nombre = nombre.lower()
elif opcion == 3:
    nombre = nombre.title()

print("Resultado:", nombre) 

#ACTIVIDAD 9 

magnitud:float = float(input("Ingrese la magnitud: "))
if magnitud >= 0 and magnitud < 3:
 print("MUY LEVE")
elif magnitud >= 3 and magnitud < 4:
 print("LEVE")
elif magnitud >= 4 and magnitud < 5:
 print("MODERADO")
elif magnitud >= 5 and magnitud < 6:
 print("FUERTE")
elif magnitud >= 6 and magnitud < 7:
 print("MUY FUERTE")
elif magnitud >= 7 :
 print("EXTREMO")
else :
  print("Lectura no valida")

#ACTIVIDAD 10 

hemisferio = ""
while hemisferio not in ["N", "S"]:
    hemisferio = input("Ingrese su hemisferio (N/S): ").upper()

mes = 0
while mes < 1 or mes > 12:
    mes = int(input("Ingrese el mes (1-12): "))

dia = 0
while dia < 1 or dia > 31:
    dia = int(input("Ingrese el día (1-31): "))

if (mes == 12 and dia >= 21) or (mes <= 3 and (mes != 3 or dia <= 20)):
    estacion_norte = "Invierno"
    estacion_sur = "Verano"
elif (mes == 3 and dia >= 21) or (mes <= 6 and (mes != 6 or dia <= 20)):
    estacion_norte = "Primavera"
    estacion_sur = "Otoño"
elif (mes == 6 and dia >= 21) or (mes <= 9 and (mes != 9 or dia <= 20)):
    estacion_norte = "Verano"
    estacion_sur = "Invierno"
elif (mes == 9 and dia >= 21) or (mes <= 12 and (mes != 12 or dia <= 20)):
    estacion_norte = "Otoño"
    estacion_sur = "Primavera"
else:
    estacion_norte = "Fecha no válida"
    estacion_sur = "Fecha no válida"

if hemisferio == "N":
    estacion = estacion_norte
else:
    estacion = estacion_sur

print(f"Estación actual en su hemisferio: {estacion}")